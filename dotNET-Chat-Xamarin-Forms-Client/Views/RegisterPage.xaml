<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dotNET_Chat_Xamarin_Forms_Client.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Entry Placeholder="User name" Text="{Binding UserName}"/>
            <Entry Placeholder="E-mail" Text="{Binding Email}"/>
            <Entry IsPassword="True" Placeholder="Password" Text="{Binding Password}"/>
            <Entry IsPassword="True" Placeholder="ConfirmPassword" Text="{Binding ConfirmPassword}"/>
            <Button VerticalOptions="Center" Text="Register" Command="{Binding RegisterCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>